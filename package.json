{
  "name": "dnsrr",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint **/*.js",
    "frontend": "cd frontend && npm i; cd ..",
    "backend": "cd backend && npm i; cd ..",
    "postinstall": "npm run frontend && npm run backend && docker-compose build",
    "precommit": "npm run lint",
    "dev": "cd frontend && npm start",
    "start": "npm install && docker-compose up -d",
    "stop": "docker-compose stop && docker-compose rm -f"
  },
  "devDependencies": {
    "babel-eslint": "6.1.2",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.13.0",
    "eslint": "3.2.2",
    "eslint-config-airbnb": "10.0.0",
    "eslint-plugin-import": "1.12.0",
    "eslint-plugin-jsx-a11y": "2.0.1",
    "eslint-plugin-react": "6.0.0",
    "husky": "0.11.6"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-1"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "__BROWSER__": true,
      "__DEV__": true
    },
    "rules": {
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "global-require": 0,
      "no-console": 0,
      "react/jsx-filename-extension": 0,
      "semi": [
        2,
        "never"
      ]
    }
  }
}
